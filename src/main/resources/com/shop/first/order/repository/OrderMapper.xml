<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shop.first.order.repository.OrderMapper">


    <resultMap id="orderMap" type="com.shop.first.order.domain.Order">
        <result property="orderCode" column="order_code" />

    </resultMap>

    <!--    //주문 내역 조회  -->
    <select id="getArticles" resultMap="orderMap">
            SELECT
                *
           FROM
           order
    </select>

    <!--    //주문 상세 조회  -->
    <select id="getContent" resultMap="orderMap">
        SELECT * FROM order
        WHERE order_code = #{orderCode}
    </select>

    <!--    //주문하기  -->
    <insert id="insert">
        INSERT INTO product
        (order_code)
        VALUES
        (seq_product_order.nextval, #{cateCode} , #{prName}, #{prPrice},
        #{prYn}, #{prAmount}, #{prThumb}, #{prImg1}, #{prImg2}, #{prImg3},
        #{prImg4}, #{prImg5}, #{prColor})
    </insert>


    <!--    //주문 취소 -->
    <delete id="cancel">
        DELETE FROM order
        WHERE order_code = #{orderCode}
    </delete>

</mapper>